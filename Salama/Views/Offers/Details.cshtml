@model Salama.Models.Offer

@{
    ViewBag.Title = "تفاصيل العرض";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           الاسم
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            الصورة
        </dt>
        <dd>
            <img src="~/Uploads/Offers/@(Model.ID).jpg" width="100" height="100" style="border-radius:50%" alt="" />
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("تعديل", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("العودة للعروض", "Index")
</p>
