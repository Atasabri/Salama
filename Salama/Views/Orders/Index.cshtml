@model IEnumerable<Salama.Models.Order>

@{
    ViewBag.Title = "المبيعات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>المبيعات</h2>

<p>
    @Html.ActionLink("اضافة طلب", "Create")
</p>
<form action="~/Orders/FindResults" method="post">
    <input id="Text1" type="date" class="form-control" required name="Date" />
    <input id="Submit1" type="submit" class="btn btn-block" value="بحث" />
</form>
<table class="table">
    <tr>
        <th>
            التاريخ
        </th>
        <th>
            رقم العداد
        </th>
        <th>
            اسم العميل
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.Date.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>

        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.ID }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.ID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
