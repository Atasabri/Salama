@model Salama.Models.Type

@{
    ViewBag.Title = "تفاصيل الشركة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>تفاصيل الشركة</h2>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            الاسم
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            الصورة
        </dt>
        <dd>
            <img src="~/Uploads/Types/@(Model.ID).jpg" width="100" height="100" style="border-radius:50%" alt="" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("تعديل", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("العودة لقائمة الشركات", "Index")
</p>
