@model Salama.Models.Product

@{
    ViewBag.Title = "حذف المنتج";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>حذف المنتج</h2>

<h3>هل انت متاكد انك تريد حذف هذالمنتج ؟</h3>
<div>
    <h4>تفاصيل المنتج</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            الاسم
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            السعر
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            التفاصيل
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            عدد الكيلو مترات
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KMNumber)
        </dd>

        <dt>
            الشركة المنتجة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("العودة للمنتجات", "Index")
        </div>
    }
</div>
