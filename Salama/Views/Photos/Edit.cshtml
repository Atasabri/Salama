@model Salama.Models.Photo

@{
    ViewBag.Title = "تعديل الصورة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>تعديل</h2>

@using (Html.BeginForm("Edit", "Photos", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>الصورة</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="form-group">
            @Html.Label("الصورة", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="File1" type="file" name="Phot" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("العودة للصور", "Index")
</div>
